{{#link-to 'admin.pizzas.new' class='pizza-new-btn'}}New Pizza{{/link-to}}

<table class="pizza-table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |pizza|}}
      <tr class="pizza-table__row">
        <td>{{ pizza.id }}</td>
        <td>{{ pizza.name }}</td>
        <td>Edit</td>
      </tr>
    {{/each}}
  </tbody>
</table>

{{outlet}}
